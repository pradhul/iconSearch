{
  "compilerOptions": {
    "target": "es2020",  // Target a modern Node.js version supported by Lambda
    "module": "commonjs", // Use CommonJS modules for compatibility
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist", // Output compiled JavaScript to dist (matching webpack)
    "rootDir": "./src", // Consider src the root of your TypeScript code
  },
  "include": ["src/**/*.ts"], // Compile all TypeScript files in the src directory
  "exclude": ["node_modules"]
}